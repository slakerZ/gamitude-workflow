{
    "extends": ["eslint:recommended", "prettier"],
    "plugins": ["prettier"],
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_",
                "ignoreRestSiblings": true
            }
        ],
        "no-unexpected-multiline": "off",
        "no-console": ["error", { "allow": ["warn", "info", "error"] }],
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "trailingComma": "es5",
                "tabWidth": 4,
                "useTabs": false
            }
        ]
    }
}
